<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:id="@+id/linearLayout_editNameButton">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/LightGrey2"
                android:background="@color/SlateGray"
                android:gravity="center"
                android:clickable="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_view_player_text"
                android:id="@+id/textViewPlayerNameText"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:textColor="@color/White"
                android:background="@color/SlateGray"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Gearoid"
                android:gravity="center"
                android:id="@+id/textView_username" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_edit_name"
                android:id="@+id/button_edit_name"
                android:textColor="@color/White"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                android:clickable="false"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/SlateGray" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/linearLayout_hostButton">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/imageView_hostButton"
                android:clickable="false"
                android:adjustViewBounds="true"
                android:background="@color/GreenLight"
                android:src="@drawable/button_host" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Host Game"
                android:clickable="false"
                android:id="@+id/button_host_service"
                android:textColor="@color/White"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/GreenLight" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/linearLayout_joinButton">


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/imageView_joinButton"
                android:clickable="false"
                android:adjustViewBounds="true"
                android:background="@color/SlateBlue"
                android:src="@drawable/button_join" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Join Game"
                android:clickable="false"
                android:id="@+id/button_join_service"
                android:textColor="@color/White"
                android:background="@color/SlateBlue"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

    </LinearLayout>


</LinearLayout>
