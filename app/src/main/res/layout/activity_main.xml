<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/LightGrey2"
                android:background="@color/SlateGray"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_view_player_text"
                android:id="@+id/textViewPlayerNameText"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:background="@color/SlateGray"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Gearoid"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:id="@+id/textView_username" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_edit_name"
                android:id="@+id/button_edit_name"
                android:textColor="@color/White"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/SlateGray" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout_hostButton">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/imageView_hostButton"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:background="@color/GreenLight"
                android:src="@drawable/button_host" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Host Game"
                android:id="@+id/button_host_service"
                android:textColor="@color/White"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/GreenLight" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout_joinButton">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/imageView_joinButton"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:background="@color/SlateBlue"
                android:src="@drawable/button_host" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Join Game"
                android:id="@+id/button_join_service"
                android:textColor="@color/White"
                android:background="@color/SlateBlue"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
