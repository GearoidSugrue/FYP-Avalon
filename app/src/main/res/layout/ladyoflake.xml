<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Lady Of Lake Token"
        android:id="@+id/textView_ladyOfLakeLabel" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/material_blue_grey_950" />

    <ListView
        android:id="@+id/listview_ladyOfLakeCandidates"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/material_blue_grey_950" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Tap Card To Revel Chosen Player's Loyalty"
        android:id="@+id/textView_tapToRevelLoyaltyLabel" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/material_blue_grey_950" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_confrimLadyOfLakeSelection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="0">

        <ListView
            android:id="@+id/listview_chosenLadyOfLakePlayer"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_width="fill_parent"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:gravity="center_vertical"
            android:background="@color/material_blue_grey_950" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/imageView_loyaltyCard"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/misc_loyaltyback"
            android:adjustViewBounds="true"            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_confirmLadyOfLake"
            android:layout_gravity="bottom"
            android:layout_weight="0"/>
    </LinearLayout>

</LinearLayout>