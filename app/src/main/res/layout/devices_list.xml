<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:background="@color/GreenLight"
        android:textColor="@color/White"
        android:text="@string/label_me"
        android:id="@+id/textview_label_myDevice"
        android:gravity="center_vertical"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_label_friendly_name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:text="@string/label_friendly_name"
            />

        <TextView
            android:id="@+id/textview_label_name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_label_friendly_name"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:text="@string/label_ID"
            />
        <TextView
            android:id="@+id/textview_label_status"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_label_name"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:text="@string/label_status"
            />
        <TextView
            android:id="@+id/my_device_friendly_name"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_label_friendly_name"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            />
        <TextView
            android:id="@+id/my_device_name"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_label_friendly_name"
            android:layout_toRightOf="@id/textview_label_name"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            />
        <TextView
            android:id="@+id/my_device_status"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_label_status"
            android:layout_below="@id/my_device_name"
            android:singleLine="true"
            android:textSize="@dimen/abc_text_size_medium_material"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/finding_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:background="@color/GreenLight"
        android:textColor="@color/White"
        android:text="@string/finding_host">
    </TextView>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <ProgressBar
        android:id="@+id/discoveryProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@android:style/Widget.ProgressBar.Small">

    </ProgressBar>

</LinearLayout>

