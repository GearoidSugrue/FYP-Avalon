<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/frag_teamVoteResult_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/MediumPurple"
        android:layout_gravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Vote Result"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/MediumPurpleLight"
        android:textColor="@color/White"
        android:id="@+id/textView_voteResultLabel" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/CadetBlue"
        android:layout_gravity="center_horizontal"
        android:text="Team Accepted"
        android:gravity="center"
        android:id="@+id/textView_voteResult" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Players Who Approved"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/MediumPurpleLight"
        android:textColor="@color/White"
        android:id="@+id/textView_votedApproveLabel" />

    <ListView
        android:id="@+id/listview_votedApprove"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Players Who Rejected"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/MediumPurpleLight"
        android:textColor="@color/White"
        android:id="@+id/textView_votedRejectLabel" />

    <ListView
        android:id="@+id/listview_votedReject"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/MediumPurpleLight" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="0">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:id="@+id/button_dismissTeamVoteResult"
            android:textColor="@color/MediumPurpleLight"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>