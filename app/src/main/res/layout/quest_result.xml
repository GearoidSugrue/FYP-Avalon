<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/frag_questVoteResult_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/SlateGray"
        android:layout_gravity="center"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Quest Team"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/LightSlateGray"
        android:textColor="@color/White"
        android:id="@+id/textView_questTeamLabel" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/SlateBlue"
        android:layout_gravity="center_horizontal"
        android:text="Quest Succeeded"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/textView_questResult"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listview_questTeam"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="fill_parent" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="Tap To Reveal Card"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/LightSlateGray"
        android:textColor="@color/White"
        android:id="@+id/textView_RevelCardLabel" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_questVoteResultsRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView_questVote1"
            android:clickable="true"
            android:src="@drawable/misc_swordback_small"
            android:adjustViewBounds="true"/>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView_questVote2"
            android:clickable="true"
            android:src="@drawable/misc_swordback_small"
            android:adjustViewBounds="true"/>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView_questVote3"
            android:clickable="true"
            android:src="@drawable/misc_swordback_small"
            android:adjustViewBounds="true"
            android:visibility="gone"/>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:id="@+id/rightBlankSpaceRow1"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_questVoteResultsRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView_questVote4"
            android:clickable="true"
            android:src="@drawable/misc_swordback_small"
            android:adjustViewBounds="true"
            android:visibility="visible"/>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView_questVote5"
            android:clickable="true"
            android:src="@drawable/misc_swordback_small"
            android:adjustViewBounds="true"
            android:visibility="invisible"/>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView_questVote6"
            android:clickable="true"
            android:src="@drawable/misc_swordback_small"
            android:adjustViewBounds="true"
            android:visibility="invisible"/>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent" />


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/LightSlateGray" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss"
        android:textAllCaps="true"
        android:id="@+id/button_dismissQuestResult"
        android:layout_gravity="bottom"
        android:textColor="@color/LightSlateGray"
        style="?android:attr/borderlessButtonStyle"
        android:layout_weight="0"
        android:visibility="invisible"/>


</LinearLayout>