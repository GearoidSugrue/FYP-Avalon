<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gearoid.testchatapp.GameActivity"
    android:orientation="vertical">

    <fragment
        android:id="@+id/layout_gameBoardFragment"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        class="com.example.gearoid.testchatapp.GameBoardFragment">

        <!-- Preview: layout=@layout/row_devices -->
    </fragment>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_voteButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="0">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team Vote"
            android:id="@+id/button_teamVoteFrag"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quest Vote"
            android:id="@+id/button_questVoteFrag"
            android:layout_weight="1" />


    </LinearLayout>
</LinearLayout>
